.product-item{
  height: 200rpx;
  background: white;
  /* 弹性布局 */
  display: flex;
  padding: 20rpx 10rpx;

  border-bottom: 1rpx solid rgba(180, 180, 180, 0.74);
}

.item-left image{
  width: 200rpx;
  height: 200rpx;
}

.item-right{
  flex: 1;
  height: 200rpx;
}

.product-title{
  font-size: 36rpx;
  color: gray;
  height: 100rpx;

  /* 多行文本溢出 */
  text-overflow: ellipsis;
  word-wrap: break-word;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2; 
  /*行数*/
  -webkit-box-orient: vertical;
}

.product-address{
  font-size: 20rpx;
  color: gray;
}

.product-price{
  color: rgb(184, 58, 58);
}

.product-icon image{
  width: 35rpx;
  height: 35rpx;
  float: right;
}