/* pages/car/car.wxss */
.product{
  padding-bottom: 150rpx;
}

.goods{
  height: 300rpx;
  background: white;
  /*弹性布局*/
  display: flex;
  align-items: center;
  margin: 0 15rpx;
  border-bottom: 1rpx solid rgba(180, 180, 180, 0.74);
}

/* .left{
  background: turquoise;
  width: 100rpx;
} */

.right{
  /*除left100rpx剩余的给right*/
  flex:1;
  height: 100%;
  display: flex;
 /* 与.del子绝父相 */
  position: relative;
}

.right image{
  width: 250rpx;
  height: 250rpx;
  margin-top: 25rpx;
}

.max-rigth{
  flex:1;
  margin-top: 25rpx;
  margin-left: 20rpx;
}

.title{
  font-size: 36rpx;
  color: gray;
  height: 100rpx;
  text-overflow: ellipsis;
  word-wrap: break-word;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.price{
  font-size: 44rpx;
  color: #ff1d97;
  margin: 12rpx 0;
}

.changeNum{
  width: 260rpx;
  display: flex;
  color: gray;
  border: 1rpx solid grey;
}

.changeNum > view{
  width: 80rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
}

.num{
  width: 100rpx !important;
  border-left: 1rpx solid gray;
  border-right: 1rpx solid gray;
}

.del {
  width: 60rpx !important;
  height: 60rpx !important;
  position: absolute;
  right: 30rpx;
  bottom: 35rpx;
}

.jiesuan {
  height: 100rpx;
  background: white;
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
 /* 只有一行才能用的垂直居中 */
  line-height: 100rpx;
  /* 怪异盒子模型:宽度不受内外边距影响 */
  box-sizing: border-box;
  padding: 0 30rpx;

  border-top: 1rpx solid rgba(211, 210, 210, 0.808);
}

.go-buy{
  width: 200rpx;
  height: 80rpx;
  background: #ff7e3d;
  text-align: center;
  line-height: 80rpx;
  color: white;
  margin-top: 10rpx;
}

.all-price text{
  color: rgb(255, 38, 0);
  font-size: 40rpx;
}